<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeLevelsActivity">

    <Button
        android:id="@+id/btnHard"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circular_button"
        android:text="hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toEndOf="@+id/btnMed"
        app:layout_constraintTop_toTopOf="@+id/btnEasy" />

    <Button
        android:id="@+id/btnMed"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circular_button"
        android:text="Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toEndOf="@+id/btnEasy"
        app:layout_constraintTop_toTopOf="@+id/btnEasy" />

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="320dp"
        android:background="@drawable/circular_button"
        android:text="Easy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Choose a difficulty level"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
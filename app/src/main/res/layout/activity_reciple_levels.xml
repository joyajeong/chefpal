<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeLevelsActivity">

    <Button
        android:id="@+id/btnHard"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:text="hard"
        app:layout_constraintEnd_toEndOf="@+id/btnMed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnMed"
        app:layout_constraintTop_toBottomOf="@+id/btnMed" />

    <Button
        android:id="@+id/btnMed"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:text="Medium"
        app:layout_constraintEnd_toEndOf="@+id/btnEasy"
        app:layout_constraintStart_toStartOf="@+id/btnEasy"
        app:layout_constraintTop_toBottomOf="@+id/btnEasy" />

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_marginBottom="424dp"
        android:text="Easy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Choose a difficulty level"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>